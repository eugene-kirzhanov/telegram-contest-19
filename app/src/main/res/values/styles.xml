<resources>

    <style name="BaseAppTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:windowBackground">@color/background_light</item>

        <item name="chart_bg_color">@color/chart_background_light</item>
        <item name="chart_guideline_color">@color/chart_guideline_light</item>
        <item name="minichart_fade_color">@color/minichart_fade_color_light</item>
        <item name="minichart_window_color">@color/minichart_window_color_light</item>
        <item name="chart_bottom_line_color">@color/chart_bottom_line_light</item>

        <item name="title_text_color">@color/colorAccent_light</item>

        <item name="graphs_text_color">@color/graphs_text_light</item>
        <item name="graphs_divider">@drawable/graphs_divider_light</item>

        <item name="chart_text_color">@color/chart_text_color_light</item>

        <item name="popup_background">@drawable/popup_light</item>
        <item name="popup_title_text_color">@android:color/black</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="android:windowBackground">@color/background_dark</item>

        <item name="chart_bg_color">@color/chart_background_dark</item>
        <item name="chart_guideline_color">@color/chart_guideline_dark</item>
        <item name="minichart_fade_color">@color/minichart_fade_color_dark</item>
        <item name="minichart_window_color">@color/minichart_window_color_dark</item>
        <item name="chart_bottom_line_color">@color/chart_bottom_line_dark</item>

        <item name="title_text_color">@color/colorAccent_dark</item>

        <item name="graphs_text_color">@color/graphs_text_dark</item>
        <item name="graphs_divider">@drawable/graphs_divider_dark</item>

        <item name="chart_text_color">@color/chart_text_color_dark</item>

        <item name="popup_background">@drawable/popup_dark</item>
        <item name="popup_title_text_color">@android:color/white</item>
    </style>

    <style name="AppThemeLight" parent="AppTheme.Light">
        <item name="android:actionBarStyle">@style/ColoredActionBarLight</item>
    </style>

    <style name="AppThemeDark" parent="AppTheme.Dark">
        <item name="android:actionBarStyle">@style/ColoredActionBarDark</item>
    </style>

    <style name="ColoredActionBarLight" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary_light</item>
    </style>

    <style name="ColoredActionBarDark" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary_dark</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
