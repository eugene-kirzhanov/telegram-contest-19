<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".features.MainActivity">

    <by.anegin.telegram_contests.core.ui.view.ChartView
        android:id="@+id/chartView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:content_bg_color="#f4f8f9"
        app:graph_line_width="2dp" />

    <by.anegin.telegram_contests.core.ui.view.MiniChartView
        android:id="@+id/miniChartView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:chart_line_width="1dp"
        app:fade_color="#88dae7f0"
        app:range_end="0.3"
        app:range_start="0"
        app:window_color="#dae7f0"
        app:window_stroke_width_left_right="6dp"
        app:window_stroke_width_top_bottom="2dp" />

    <LinearLayout
        android:id="@+id/layoutGraphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:checked="true"
            android:drawablePadding="20dp"
            android:text="Hello, world!!!"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e4e4" />

</LinearLayout>
